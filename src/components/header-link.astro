---
interface Props {
  href: string;
  class?: string;
  checkActive?: boolean;
}

const {
  href,
  class: className,
  checkActive = false,
  ...restOfProps
} = Astro.props;

const currentPath = Astro.url.pathname;
const destination = href;
const isActive = currentPath === destination && checkActive;
---

<a
  href={destination}
  class:list={["text-white", className, isActive && "border-b-2 border-white"]}
  {...restOfProps}
>
  <slot />
</a>
