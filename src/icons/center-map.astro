<style>
  #center-button {
    white-space: normal;
    pointer-events: auto;
    user-select: none;
    font: inherit;
    list-style: none;
    margin: 0;
    outline: 0;
    padding: 0;
    vertical-align: baseline;
    color: inherit;
    background: #fff;
    border: 0;
    box-shadow:
      0 1px 2px rgba(60, 64, 67, 0.3),
      0 1px 3px 1px rgba(60, 64, 67, 0.15);
    position: relative;
    border-radius: 8px;
    display: block;
    width: 29px;
    height: 29px;
    overflow: hidden;
    cursor: pointer;
    transition: background-color 0.16s ease-out;
  }
  #center-icon {
    white-space: normal;
    pointer-events: auto;
    user-select: none;
    font: inherit;
    list-style: none;
    color: inherit;
    cursor: pointer;
    display: block;
    height: 18px;
    left: 6px;
    margin: 0;
    padding: 0;
    position: absolute;
    top: 6px;
    width: 18px;
    background-image: url(//maps.gstatic.com/tactile/mylocation/mylocation-sprite-1x.png);
    background-size: 180px 18px;
    background-position: 0 0;
  }
</style>

<button id="center-button">
  <div id="center-icon"></div>
</button>
